<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="https://fonts.googleapis.com/css?family=Audiowide|Bangers|Days+One|Rock+Salt" rel="stylesheet">

</head>
<body>
    <!--Header/Navbar started-->
    <div class="page-header">
        <!--Used the inverse nav as the base-->
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <!--the link to the homepage index-->
                    @Html.ActionLink("Wardrobe Door", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                </div>
                <!--navbar with the links to About and Contact pages-->
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav homenav">
                        <li>@Html.ActionLink("About", "About", "Home")</li>
                        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    </ul>
                </div>
                <!--bottom part of the bar that is lined to all the different pages-->
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav homenav">
                        <li>@Html.ActionLink("Outfits", "Index", "OutFits")</li>
                        <li>@Html.ActionLink("Accessories", "Index", "Accessories")</li>
                        <li>@Html.ActionLink("Tops", "Index", "Tops")</li>
                        <li>@Html.ActionLink("Bottoms", "Index", "Bottoms")</li>
                        <li>@Html.ActionLink("Shoes", "Index", "Shoes")</li>
                    </ul>
                </div>
            </div>
        </div>
        <!--End header/Navbar-->
        </div>
        <div class="container body-content">
            @RenderBody()
            <hr />
            <!--footer has a 'warning' and glyphicon -->
            <footer>
                <p>&copy; @DateTime.Now.Year - <span class="glyphicon glyphicon-info-sign"></span>These suits are for heroes only.  No Villians</p>
            </footer>
        </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
</body>
</html>
